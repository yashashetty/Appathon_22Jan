<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark" >

    <ImageView
        android:id="@+id/splash_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/ic_launcher"
        android:visibility="invisible"

        />

    <ImageView
        android:id="@+id/schneider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/splash_img"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:background="@drawable/ribbon"
        android:visibility="invisible"

        />

    <TextView
        android:id="@+id/customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/success"
        android:layout_alignBottom="@+id/success"
        android:layout_alignRight="@+id/splash_img"
        android:layout_marginRight="10dp"
        android:text="Customer"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"/>
    />

    <TextView
        android:id="@+id/success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/splash_img"
        android:layout_below="@+id/splash_img"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="32dp"
        android:text="Voice"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"

        android:fontFamily="sans-serif"/>

</RelativeLayout>